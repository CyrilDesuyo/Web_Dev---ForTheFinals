
@{
    ViewBag.Title = "ViewUsers";
    Layout = "~/Views/Shared/_Layout2.cshtml";
}

<!DOCTYPE html>
<html>
<head>
    <title>User List</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f4f4f4;
            margin: 0;
            padding: 0;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
        }

        h2 {
            text-align: center;
            color: #333;
        }

        table {
            width: 60%;
            margin: 20px auto;
            border-collapse: collapse;
            background-color: #fff;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

        th, td {
            padding: 12px;
            text-align: left;
            border-bottom: 1px solid #ddd;
        }

        th {
            background-color: #f2f2f2;
        }

        tr:hover {
            background-color: #f5f5f5;
        }

        /* Edit button style */
        .edit-btn {
            background-color: #4CAF50;
            color: #fff;
            border: none;
            padding: 8px 12px;
            border-radius: 4px;
            cursor: pointer;
        }

        /* Delete button style */
        .delete-btn {
            background-color: #FF5733;
            color: #fff;
            border: none;
            padding: 8px 12px;
            border-radius: 4px;
            cursor: pointer;
        }
        th {
            color: #fff;
            background-color: gray;
        }
    </style>
</head>
<body>
    <h2>User List</h2>

    <table border="1">
        <tr>
            <th>Username</th>
            <th>Email</th>
            <th>Password</th>
            <th>Action</th>
        </tr>

        @foreach (var user in Model)
        {
            <tr>
                <td>@user.username</td>
                <td>@user.email</td>
                <td>@user.password</td>
                <td style="display: flex; align-items: center; justify-content: space-around; border-bottom: 1px solid black; border-left: none; border-right: none; border-top: none;">
                    @Html.ActionLink("Edit", "EditUser", new { id = user.userID }) |
                    @Html.ActionLink("Delete", "ConfirmDelete", new { id = user.userID }, new { @class = "delete-link" })
                </td>
            </tr>
        }
    </table>
</body>
</html>
